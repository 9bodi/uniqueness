<div class="cards-container-show">
  <div class="card-show-info">
    <ul>
      <div class="card-product-infos-show">
        <h2><%= @artwork.name %></h2>
        <p><%= @artwork.description %></p>
        <p><%= @artwork.user.name %></p>
        <br>
        <br>
        <br>

        <%# <p>Number of voters:</p><%= @artwork.artwork_prices.count %>
        <%# <p>Users estimated price: <%= @artwork.artwork_prices.average(:price_estimation)</p> %>
      </div>

      <p>Score :
      <% if @artwork.score %>
        <% if @artwork.score.between?(0, 78)#1étoiles %>
          <%= @artwork.score %> <br>
          <i class='fas fa-star'></i>
          <% 4.times do %>
            <i class="far fa-star"></i>
          <% end %>
        <% elsif @artwork.score.between?(78, 96)#2étoiles %>
          <%= @artwork.score %> <br>
          <% 2.times do %>
            <i class='fas fa-star'></i>
          <% end %>
          <% 3.times do %>
            <i class="far fa-star"></i>
          <% end %>
        <% elsif @artwork.score.between?(96, 114)#3étoiles %>
          <%= @artwork.score %> <br>
          <% 3.times do %>
            <i class='fas fa-star'></i>
          <% end %>
          <% 2.times do %>
            <i class="far fa-star"></i>
          <% end %>
        <% elsif @artwork.score.between?(114, 132)#4étoiles %>
          <%= @artwork.score %> <br>
          <% 4.times do %>
            <i class='fas fa-star'></i>
          <% end %>
          <% 1.times do %>
            <i class="far fa-star"></i>
          <% end %>
        <% elsif @artwork.score.between?(132, 150)#5étoiles %>
          <%= @artwork.score %> <br>
          <% 5.times do %>
            <i class='fas fa-star'></i>
          <% end %>
        <% elsif @artwork.score.between?(150, 250)#5goldétoiles %>
        <%= @artwork.score %> <br>
        <% 5.times do %>
          <i class='fas fa-star' style="color: yellow;"></i>
        <% end %>
        <% else %>
          NO RATE YET
        <% end %>
      <% else %>
        NO RATE YET
      <% end %></p>

      <div>
        <% unless Upvote.find_by(user: current_user, artwork: @artwork) %>
          <%= link_to "upvote",artwork_upvotes_path(@artwork), method: :post, class:  'btn-uniqueness-upvote' %>
        <% end %>
      </div>
        <p>Upvotes: <%= @artwork.upvotes.count %></p>
    </ul>
  </div>



  <div class="card-product-show">

