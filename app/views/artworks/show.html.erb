<div class="cards-container-show">
  <div class="card-show-info">
    <ul>
      <div class="card-product-infos-show">
        <h2><%= @artwork.name %></h2>
        <p><%= @artwork.description %></p>
        <p><%= @artwork.score ? @artwork.score : "This artwork have no score yet" %></p>
        <br>
        <br>
        <br>
        <p><p>Upvotes:</p><%= @artwork.upvotes.count %></p>
        <p><p>Number of voters:</p><%= @artwork.artwork_prices.count %></p>
        <p><p>Users estimate price:</p><%= @artwork.artwork_prices.average(:price_estimation) %></p>
      </div>

      <p>Width : <%= @artwork.width %></p>
      <p>Height : <%= @artwork.height %></p>
      <p>Pixels : <%= @artwork.number_of_pixel_in_image %></p>
      <p>Colors : <%= @artwork.colors %></p>
    </ul>
  </div>

  <div class="card-product-show">

    <%= cl_image_tag @artwork.photo.key %><br>

    <%= link_to "Redirect to marketplace", "https://superrare.com/sign-in", class: "btn-uniqueness", target: "_blank" %>

  </div>


  <div class="card-input-user">
    <% unless ArtworkPrice.find_by(user: current_user, artwork: @artwork) %>
  <%= simple_form_for [@artwork, @artwork_price] do |f| %>
  <%= f.input :price_estimation %>
  <% end %>
  <% end %>
  <% unless Upvote.find_by(user: current_user, artwork: @artwork) %>
  <%= link_to "upvote",artwork_upvotes_path(@artwork), method: :post, class:  'btn-uniqueness-upvote' %>
  <% end %>


  </div>
</div>

<%= render 'shared/burger_menu' %>
