<div class="container">
  <div class="home-container">
    <div class="half-home-1">
      <h1><span class="color-orange">Freedom</span> <span class="color-salmon">from</span> <span class="color-blue">ambiguity</span></h1>
      <p>Uniqueness provides an easy to use, comprehensive tool to compare, rate and upvote various work from an array of different artists and creators.</p>
      <%= link_to 'Explore', artworks_path, class:  'btn-uniqueness' %>
    </div>
    <div class="half-home-2">
     <%= link_to artworks_path do %>
      <%= image_tag('unsplash_NTYYL9Eb9y8.jpg') %>
       <% end %>
    </div>
  </div>
  <div class="month-title">
    <h1>Uniqueness artist of the month</h1>
  </div>
  <div class="home-container-2">
    <div class="half-home-3">
      <%= link_to artwork_path(@artworks[0]) do %>
        <%= cl_image_tag @artworks[0].photo.key %>
      <% end %>

    </div>
    <div class="half-home-4">

      <h2><span class="color-blue"><%= @artist_of_the_month.name %></span></h2>
      <h3><span class="color-orange">3 </span>Pieces</h3>

      <div class="w-100">
       <%= link_to artwork_path(@artworks[1]) do %>
          <%= cl_image_tag @artworks[1].photo.key %>
        <% end %>


        <%= link_to artwork_path(@artworks[2]) do %>
          <%= cl_image_tag @artworks[2].photo.key %>
        <% end %>

      </div>
    </div>
  </div>
  <%# <div class="home-container">
    Articles
  </div> %>
  <%= render 'shared/burger_menu' %>
</div>

